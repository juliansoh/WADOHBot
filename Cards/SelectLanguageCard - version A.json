{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Washington State Department of Health",
          "size": "Medium",
          "wrap": true,
          "horizontalAlignment": "Center",
          "weight": "Bolder"
        },
        {
          "type": "TextBlock",
          "text": "Please select your language preferance & click Submit:",
          "wrap": true,
          "horizontalAlignment": "Center"
        }
      ],
      "style": "good",
      "bleed": true
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Input.ChoiceSet",
