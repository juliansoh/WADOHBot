            {
              "title": "日本語 - Japanese",
              "value": "ja"
            },
            {
              "title": "한국어 - Korean",
              "value": "ko"
            },
            {
              "title": "Việt - Vietnamese",
              "value": "vi"
            },
            {
              "title": "Español - Spanish",
              "value": "es"
            },
            {
              "title": "ਪੰਜਾਬੀ - Punjabi",
              "value": "pa"
            },
            {
              "title": "русский - Russian",
              "value": "ru"
            },
            {
              "title": "Українські - Ukranian",
              "value": "uk"
            },
            {
              "title": "हिंदी - Hindi",
              "value": "hi"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "action": "languageselector"
      }
    }
  ]
}