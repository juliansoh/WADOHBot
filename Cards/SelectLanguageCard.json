{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "bleed": true,
      "style": "accent",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "Washington State Department of Health",
          "horizontalAlignment": "Center"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Please select language preference:",
      "horizontalAlignment": "Center"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "choiceset",
      "style": "expanded",
      "value": "en",
      "choices": [
        {
          "title": "English",
          "value": "en"
        },
        {
          "title": "中文 - Chinese",
          "value": "zh"
        },
        {
          "title": "日本語 - Japanese",
          "value": "ja"
        },
        {
          "title": "한국어 - Korean",
          "value": "ko"
        },
        {
          "title": "ਪੰਜਾਬੀ - Punjabi",
          "value": "pa"
        },
        {
          "title": "русский - Russian",
          "value": "ru"
        },
        {
          "title": "Español - Spanish",
          "value": "es"
        },
        {
          "title": "українська - Ukrainian",
          "value": "uk"
        },
        {
          "title": "Việt - Vietnamese",
          "value": "vi"
        }

      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "action": "languageselector"
      }
    }
  ]
}